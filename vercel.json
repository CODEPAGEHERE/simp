
{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/app/$1" 
    }
  ],
  "installCommand": "npm install --prefix ./app && npm install --prefix ./api", 
  "buildCommand": "npm run build --prefix ./app", 
  "builds": [
    {
      "src": "app/index.html", 
      "use": "@vercel/static-build",
      "config": { "distDir": "app/dist" } 
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ]
}