{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node@3.0.0",
      "config": {
        "includeFiles": [
          "node_modules/**",  
          "prisma/**"         
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],
  "buildCommand": "npx prisma generate && npm install --production=false"
}